    <properties>
        <checkstyle.skip>false</checkstyle.skip>
        <maven.test.skip>false</maven.test.skip>
        <maven.integration.test.skip>false</maven.integration.test.skip>
        <java.min.src.version>1.8</java.min.src.version>
