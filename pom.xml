        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:honeybadger-io/honeybadger-java.git</connection>
        <developerConnection>scm:git:git@github.com:honeybadger-io/honeybadger-java.git</developerConnection>
        <url>git@github.com:honeybadger-io/honeybadger-java.git</url>
